<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/pubg_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="26.0sp"
        android:textStyle="bold"
        android:textColor="@color/main"
        android:id="@+id/home"
        android:paddingLeft="5.0sp"
        android:paddingTop="5.0sp"
        android:paddingRight="5.0sp"
        android:paddingBottom="5.0sp"
        android:layout_width="wrap_content"
        android:layout_height="41.0dip"
        android:layout_marginTop="120.0dip"
        android:text=""
        android:paddingStart="5.0sp"
        android:paddingEnd="5.0sp"
        android:layout_marginStart="10.0dip"
        android:layout_marginEnd="8.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394" />
    <ImageView
        android:textSize="26.0sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:paddingLeft="5.0sp"
        android:paddingTop="5.0sp"
        android:paddingRight="5.0sp"
        android:paddingBottom="5.0sp"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_marginTop="20.0dip"
        android:src="@drawable/Xero"
        android:text=""
        android:paddingStart="5.0sp"
        android:paddingEnd="5.0sp"
        android:layout_marginStart="10.0dip"
        android:layout_marginEnd="8.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="fill_parent"
		android:id="@+id/lay"
        android:layout_height="fill_parent"
        android:layout_weight="1.0">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:background="@android:color/transparent"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.0dip"
            android:layout_marginEnd="8.0dip"
            app:cardBackgroundColor="#b9474646"
            app:cardCornerRadius="5.0dip"
            app:cardElevation="0.0dip"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <EditText
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#FFFFFF"
                    android:textColorHint="#ff999999"
                    android:id="@+id/key"
                    android:layout_width="300.0dip"
                    android:layout_height="44.0dip"
                    android:layout_marginTop="16.0dip"
                    android:hint="Enter You Key"
                    android:ems="10"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10.0dip"
                    android:inputType="textPersonName"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="8.0dip"
                    android:backgroundTint="#a3b8b8b8"
                    android:drawableTint="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />
                <Button
                    android:textColor="#ffffff"
                    android:id="@+id/getKey"
                    android:background="@drawable/radiusall3"
                    android:layout_width="108.0dip"
                    android:layout_height="42.0dip"
                    android:layout_marginTop="15.0dip"
					android:layout_marginStart="8.0dip"
                    android:layout_marginBottom="15.0dip"
                    android:layout_marginEnd="170.0dip"
                    android:text="Get Key"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/key"
                    app:layout_constraintVertical_bias="0.085" />
                <Button
                    android:textColor="#ffffff"
                    android:id="@+id/btnSignIn"
                    android:background="@drawable/radiusall3"
                    android:layout_width="108.0dip"
                    android:layout_height="42.0dip"
                    android:layout_marginTop="15.0dip"
                    android:layout_marginBottom="15.0dip"
                    android:text="Login"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.97"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/key"
                    app:layout_constraintVertical_bias="1.0" />
                <ImageView
                    android:id="@+id/imageView"
                    android:background="@drawable/pubg"
                    android:layout_width="200.0dip"
                    android:layout_height="78.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="8.0dip"
                    android:backgroundTint="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
