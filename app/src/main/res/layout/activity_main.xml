<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/pubg_bg"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:padding="10dp"
		android:layout_height="wrap_content"
		android:weightSum="2"
		android:gravity="center_vertical|end"
		android:background="@drawable/radiusall1">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text=""
			android:textSize="20sp"
			android:id="@+id/modeexc"
			android:textStyle="bold"
			android:textColor="@color/stopbtn"
			android:layout_weight="2"
			android:gravity="center"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="15.0dip"
		android:layout_marginEnd="15.0dip">

		<LinearLayout
			android:gravity="center"
			android:orientation="horizontal"
			android:padding="6.0dip"
			android:layout_width="fill_parent"
			android:layout_height="60.0dip"
			android:layout_marginTop="40dp">

			<TextView
				android:textSize="35.0sp"
				android:textColor="#ffffffff"
				android:layout_width="wrap_content"
				android:id="@+id/text1"
				android:layout_height="wrap_content"
				android:layout_marginTop="2.0dip"
				android:fontFamily="@font/bold"
				android:text="SEPAX"/>

			<TextView
				android:textSize="35.0sp"
				android:textColor="@color/main"
				android:layout_width="wrap_content"
				android:id="@+id/text2"
				android:layout_height="wrap_content"
				android:layout_marginTop="2.0dip"
				android:fontFamily="@font/bold"
				android:layout_marginStart="10.0dip"
				android:text="-YT"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:background="#b9474646"
			android:padding="10dp"
			android:weightSum="4"
			android:gravity="center_vertical">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="00"
					android:id="@+id/tv_d"
					android:textSize="20sp"
					android:textColor="#FFFFFFFF"
					android:textStyle="bold"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Days"
					android:layout_marginTop="10dp"
					android:textColor="#FFFFFFFF"/>

			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=":"
				android:textStyle="bold"
				android:textSize="25sp"
				android:textColor="#FFFFFFFF"/>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="00"
					android:id="@+id/tv_h"
					android:textSize="20sp"
					android:textColor="#FFFFFFFF"
					android:textStyle="bold"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Hour"
					android:layout_marginTop="10dp"
					android:textColor="#FFFFFFFF"/>

			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=":"
				android:textStyle="bold"
				android:textSize="25sp"
				android:textColor="#FFFFFFFF"/>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="00"
					android:textSize="20sp"
					android:id="@+id/tv_m"
					android:textColor="#FFFFFFFF"
					android:textStyle="bold"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Minute"
					android:layout_marginTop="10dp"
					android:textColor="#FFFFFFFF"/>

			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=":"
				android:textStyle="bold"
				android:textSize="25sp"
				android:textColor="#FFFFFFFF"/>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="00"
					android:textSize="20sp"
					android:id="@+id/tv_s"
					android:textColor="#FFFFFFFF"
					android:textStyle="bold"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Second"
					android:layout_marginTop="10dp"
					android:textColor="#FFFFFFFF"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:gravity="center"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20.0dip"
			android:layoutDirection="ltr">

			<androidx.cardview.widget.CardView
				android:id="@+id/starthack"
				android:layout_width="fill_parent"
				android:layout_height="90.0dip"
				android:layout_weight="2.0"
				android:layout_marginEnd="10.0dip"
				app:cardBackgroundColor="@color/stopbtn"
				app:cardCornerRadius="5.0dip"
				app:cardElevation="20.0dip">

				<LinearLayout
					android:gravity="center"
					android:orientation="vertical"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent">

					<ImageView
						android:layout_width="40.0dip"
						android:layout_height="40.0dip"
						android:src="@drawable/ic_play_arrow"/>

					<TextView
						android:textSize="18.0sp"
						android:textColor="@color/white"
						android:gravity="center"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="Start Menu"
						android:fontFamily="@font/bold"/>

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/stophack"
				android:layout_width="fill_parent"
				android:layout_height="90.0dip"
				android:layout_weight="2.0"
				app:cardBackgroundColor="@color/startbtn"
				app:cardCornerRadius="5.0dip"
				app:cardElevation="20.0dip">

				<LinearLayout
					android:gravity="center"
					android:orientation="vertical"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent">

					<ImageView
						android:layout_width="40.0dip"
						android:layout_height="40.0dip"
						android:src="@drawable/ic_stop"/>

					<TextView
						android:textSize="18.0sp"
						android:textColor="@color/white"
						android:gravity="center"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="Stop Menu"
						android:fontFamily="@font/bold"/>

				</LinearLayout>

			</androidx.cardview.widget.CardView>

		</LinearLayout>

		<LinearLayout
			android:gravity="center"
			android:orientation="horizontal"
			android:visibility="visible"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20.0dip">

			<androidx.cardview.widget.CardView
				android:id="@+id/hideoverlayesp"
				android:layout_width="fill_parent"
				android:layout_height="50.0dip"
				app:cardBackgroundColor="#b9474646"
				app:cardCornerRadius="5.0dip"
				app:cardElevation="20.0dip">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:orientation="horizontal"
					android:layout_marginBottom="5dp"
					android:padding="5dp"
					android:gravity="center_vertical">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="40dp"
						android:orientation="horizontal"
						android:padding="5dp"
						android:gravity="center_vertical">

						<ImageView
							android:layout_gravity="center"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:id="@+id/icrec"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="#FFFFFFFF"
							android:textSize="15sp"
							android:layout_marginLeft="10dp"
							android:textStyle="bold"
							android:fontFamily="@font/bold"
							android:text="Hide from Screen Recorder"
							android:layout_weight="1.0"/>

						<Switch
							android:layout_width="wrap_content"
							android:thumb="@drawable/ic_switch_off"
							android:track="@drawable/ic_switch_on"
							android:id="@+id/hiderec"
							android:layout_height="wrap_content"/>

					</LinearLayout>

				</LinearLayout>

			</androidx.cardview.widget.CardView>

		</LinearLayout>

		<androidx.cardview.widget.CardView
			android:id="@+id/telegram"
			android:layout_width="fill_parent"
			android:layout_height="70.0dip"
			android:layout_marginTop="20.0dip"
			app:cardBackgroundColor="#b9474646"
			app:cardCornerRadius="10.0dip">

			<LinearLayout
				android:gravity="start|center"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:weightSum="3.0">

				<LinearLayout
					android:gravity="center"
					android:orientation="vertical"
					android:layout_width="0.0dip"
					android:layout_height="fill_parent"
					android:layout_weight="0.5">

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/baseline_language_24"
						app:tint="@color/stopbtn"/>

				</LinearLayout>

				<LinearLayout
					android:gravity="top"
					android:orientation="vertical"
					android:layout_width="0.0dip"
					android:layout_height="fill_parent"
					android:layout_weight="2.0">

					<TextView
						android:textColor="@color/white"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="15.0dip"
						android:text="Telegram Official"
						android:fontFamily="@font/bold"/>

					<TextView
						android:textSize="11.0sp"
						android:textColor="@color/whitegelap"
						android:layout_width="fill_parent"
						android:id="@+id/text3"
						android:layout_height="wrap_content"
						android:text="🚩 A D A R S H 🇮🇳"
						android:fontFamily="@font/font"/>

				</LinearLayout>

				<LinearLayout
					android:gravity="center"
					android:orientation="vertical"
					android:layout_width="0.0dip"
					android:layout_height="fill_parent"
					android:layout_weight="0.5">

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/baseline_launch_24"
						app:tint="@color/stopbtn"/>

				</LinearLayout>

			</LinearLayout>

		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/logout"
			android:layout_width="fill_parent"
			android:layout_height="70.0dip"
			android:layout_marginTop="10.0dip"
			app:cardBackgroundColor="#b9474646"
			app:cardCornerRadius="10.0dip">

			<LinearLayout
				android:gravity="start|center"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:weightSum="3.0">

				<LinearLayout
					android:gravity="center"
					android:orientation="vertical"
					android:layout_width="0.0dip"
					android:layout_height="fill_parent"
					android:layout_weight="0.5">

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/baseline_login_24"
						app:tint="@color/stopbtn"/>

				</LinearLayout>

				<LinearLayout
					android:gravity="top"
					android:orientation="vertical"
					android:layout_width="0.0dip"
					android:layout_height="fill_parent"
					android:layout_weight="2.0">

					<TextView
						android:textColor="@color/white"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="15.0dip"
						android:text="Logout"
						android:fontFamily="@font/bold"/>

					<TextView
						android:textSize="11.0sp"
						android:textColor="@color/whitegelap"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="Back to activity login"
						android:fontFamily="@font/font"/>

				</LinearLayout>

				<LinearLayout
					android:gravity="center"
					android:orientation="vertical"
					android:layout_width="0.0dip"
					android:layout_height="fill_parent"
					android:layout_weight="0.5">

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/baseline_launch_24"
						app:tint="@color/stopbtn"/>

				</LinearLayout>

			</LinearLayout>

		</androidx.cardview.widget.CardView>

	</LinearLayout>

</RelativeLayout>

